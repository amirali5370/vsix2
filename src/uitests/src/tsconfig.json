{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2018",
        "rootDir": ".",
        "lib": [
            "es6",
            "es2018",
            "dom"
        ],
        "jsx": "react",
        "sourceMap": true,
        "outDir": "../../../out/uitests/src",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true
    },
    "exclude": [
        "node_modules",
        "../../../node_modulesx"
    ]
}

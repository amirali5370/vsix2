{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": { "*": ["types/*"] },
        "module": "commonjs",
        "target": "es2018",
        "rootDir": "src/uitests/src",
        "lib": ["es6", "es2018", "dom"],
        "jsx": "react",
        "sourceMap": true,
        "outDir": "./out/uitests/src",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true
    },
    "exclude": ["node_modules", "src/client", "src/datascience-ui", "src/smoke", "src/test", "src/testMultiRootWkspc", "src/uitests/bootstrap", "build", "wow.ts"]
}
